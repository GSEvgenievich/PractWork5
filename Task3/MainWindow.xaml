<Window x:Class="Task3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
        <local:CountControl x:Name="countControl" HorizontalAlignment="Left" VerticalAlignment="Center" MaxValue="10" ValueChanged="CountControl_ValueChanged"/>
        <Label Content="Цена: " FontSize="40"/>
        <TextBox Name="costTextBox" FontSize="40" Width="100" TextChanged="costTextBox_TextChanged"/>
        <Label Content="Стоимость: " FontSize="40"/>
        <Label Name="sumLabel" FontSize="40" Width="100"/>
    </StackPanel>
</Window>
